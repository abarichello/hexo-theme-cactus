<h1>Posts</h1>
<ul class="post-list">
  <% page.posts.sort("date", "desc").each(function(post) { %>
    <li class="post-item">
      <%- partial("_partial/post/date", { post: post, class_name: "meta" }) %>
      <span><%- partial("_partial/post/title", { post: post, index: true, class_name: "" }) %><span>
    </li>
  <% }); %>
</ul>

<h3>Categories:</h3>
<%- partial("_partial/post/archive-table", { fn: list_categories, site_data: site.categories, url_prefix: "/blog/categories/" }) %>

<h3>Tags:</h3>
<%- partial("_partial/post/archive-table", { fn: list_tags, site_data: site.tags, url_prefix: "/blog/tags/" }) %>

<%- partial('_partial/comments') %>
